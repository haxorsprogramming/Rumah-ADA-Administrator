<div class="row" id="divDataPost">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <h4 class="header-title">Data Artikel Blog</h4>
                <p class="card-title-desc">
                    <a class="btn btn-primary waves-effect waves-light" href="javascript:void(0)" @click="tambahPostAtc()">
                        <i class="mdi mdi-plus-box-multiple-outline"></i>
                        Tambah Artikel Blog
                    </a>&nbsp;
                </p>

                <div class="table-responsive">
                    <table class="table mb-0 table-hover" id="tblDataPost">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Judul</th>
                                <th style="width: 500px;">Short Deks</th>
                                <th>Writer</th>
                                <th>Aksi</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr v-for="dp in dataPost">
                                <td>{{ dp.no }}</td>
                                <td>{{ dp.judul }}<br/>({{ dp.slug }})</td>
                                <td>{{ dp.shortDeks }}</td>
                                <td><b>{{ dp.writer }}</b></td>
                                <td>
                                    <a class="btn btn-primary" href="javascript:void(0)">Edit</a>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>

            </div>
        </div>
    </div>

</div>
<script src="/base/js/post.js"></script>
