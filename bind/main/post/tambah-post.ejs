<div class="row" id="divTambahArtikel">
  <div class="col-lg-12">
    <div class="card">
      <div class="card-body">
        <h4 class="header-title">Isi data artikel baru</h4>(<small>Harap isi seluruh field</small>)
        <br />
        <div class="row">
          <div class="col-6 col-lg-6">
            <div class="form-group">
              <label>Judul</label>
              <input type="text" class="form-control" id="txtJudul" onkeyup="setSlug()"/>
            </div>
            <div class="form-group">
              <label>Jadikan slider homepage?</label>
              <select class="form-control" id="txtImgCover">
                <option value="Yes">Ya</option>
                <option value="No">Tidak</option>
              </select>
            </div>
          </div>
          <div class="col-6 col-lg-6">
            <div class="form-group">
              <label>Writer</label>
              <input type="text" class="form-control" id="txtWriter" />
            </div>
            <div class="form-group">
              <label>Category</label>
              <select class="form-control" id="txtKategori">
                <option value="none">-- Pilih kategori ---</option>
                <option value="teknologi">Teknologi</option>
                <option value="edukasi">Edukasi</option>
                <option value="tips">Tips</option>
                <option value="event">Event</option>
              </select>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-12 col-lg-12">
            <div class="form-group">
              <label>Deksripsi Singkat</label>
              <textarea class="form-control" style="width: 100%; resize:none" id="txtShortDeks">
              </textarea>
            </div>
            <div class="form-group">
              <label>Isi Artikel</label>
              <div id="editor">
                <p>This is some sample content.</p>
              </div>
            </div>
            <div class="form-group">
              <label>Img Feature (Resolusi 1000x486 pixel)</label><br/>
              <img src="" style="width:400px;" id="txtPreviewUpload">
              <div class="text-muted">Silahkan input citra</div>
              <input type="file" id="txtFoto" onchange="setImg()">
            </div>
            <div>
                <a href="javascript:void(0)" class="btn btn-primary" @click="prosesAddArtikel()">Proses Tambah Artikel</a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<script src="/base/js/tambah-post.js"></script>
